generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model JobApplication {
  id          String       @id @default(uuid())
  company     String
  role        String
  job_url     String
  dateApplied DateTime     @default(now())
  status      AppStatus    @default(Applied)
  notes       String?
  updatedAt   DateTime     @updatedAt
}

enum AppStatus {
  Applied
  Interviewing
  Offer
  Rejected
  FollowUp
}